
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".Faculty">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/mshod"/>

        <TextView android:id="@+id/teachername"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:text="HOD Name: Ms Mae Stone"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/teachernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teachername"
            android:layout_marginTop="10dp"
            android:text="Contact Number: 876-123-4567"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/teacheremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teachernumber"
            android:layout_marginTop="10dp"
            android:text="Email: msstone@ucc.edu.hod.jm"/>

        <Button android:id="@+id/call1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacheremail"
            android:layout_marginTop="20dp"
            android:backgroundTint="#40E0D0"
            android:layout_marginLeft="30dp"
            android:text="Call"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/email_fab"
            android:layout_below="@id/teacheremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/call1"
            android:contentDescription="@string/app_name"
            android:theme="@style/Theme.MaterialComponents"
            android:textAllCaps="false" app:borderWidth="0dp"
            app:useCompatPadding="true" tools:ignore="RelativeOverlap"
            android:src="@drawable/baseline_mode_24"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_below="@+id/call1"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/maleteach"/>


        <TextView android:id="@+id/teachername2"
            android:layout_below="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Coordinator Name: John Brown"/>

        <TextView android:id="@+id/teachercontact2"
            android:layout_below="@+id/teachername2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Contact Number: 876-567-8900"/>

        <TextView android:id="@+id/teacheremail2"
            android:layout_below="@id/teachercontact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Email: itprogramofficer@ucc.edu.jm"/>

        <Button android:id="@+id/call2"
            android:layout_below="@+id/teacheremail2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#40E0D0"
            android:text="Call"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/email_fab2"
            android:layout_below="@id/teacheremail2"
            android:layout_toRightOf="@+id/call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:theme="@style/Theme.MaterialComponents"
            android:textAllCaps="false" app:borderWidth="0dp"
            app:useCompatPadding="true" tools:ignore="RelativeOverlap"
            android:src="@drawable/baseline_mode_24"/>



    </RelativeLayout>
</FrameLayout>